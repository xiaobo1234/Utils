<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiaobo.utils.imageselector"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyAppTheme" >
        <activity
            android:name="com.xiaobo.utils.imageselector.TestMainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xiaobo.utils.imageselector.ImageSelector.Activity.CatalogueActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.xiaobo.utils.imageselector.ImageSelector.PictureImageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.xiaobo.utils.imageselector.ImageSelector.Activity.EditSelectedActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.xiaobo.utils.imageselector.ImageSelector.Activity.TakeImagesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.xiaobo.utils.imageselector.ImageSelector.Activity.TakeOneImgActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>